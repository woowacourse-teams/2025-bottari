<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <timestamp key="BY_DATE" datePattern="yyyy-MM-dd"/>
    <property name="LOG_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss}:%-4relative] %green([%thread]) %highlight(%-5level) %boldWhite([%C.%M:%yellow(%L)]) %replace(%marker){'^\s*$','DEFAULT_LOG'} - %msg%n"/>

    <springProfile name="default,local,test">
        <include resource="appender/console-appender.xml"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="dev,prod">
        <include resource="appender/console-appender.xml"/>
        <include resource="appender/file-business-exception-log-appender.xml"/>
        <include resource="appender/file-exception-log-appender.xml"/>
        <include resource="appender/file-http-log-appender.xml"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE-HTTP"/>
            <appender-ref ref="FILE-EXCEPTION"/>
            <appender-ref ref="FILE-BUSINESS-EXCEPTION"/>
        </root>
    </springProfile>

</configuration>
