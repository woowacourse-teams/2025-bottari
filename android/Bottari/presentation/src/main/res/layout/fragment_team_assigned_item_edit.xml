<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_team_assigned_item_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fadingEdgeLength="8dp"
        android:requiresFadingEdge="vertical"
        app:layout_constraintBottom_toTopOf="@id/rv_team_assigned_item_member"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_edit_assigned_item" />

    <include
        android:id="@+id/empty_view"
        layout="@layout/view_bottari_item_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/rv_team_assigned_item_member"
        app:layout_constraintTop_toTopOf="@id/rv_team_assigned_item_edit" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_team_assigned_item_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdgeLength="8dp"
        android:orientation="horizontal"
        android:requiresFadingEdge="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:itemCount="1"
        tools:listitem="@layout/item_checklist_mini" />
</androidx.constraintlayout.widget.ConstraintLayout>
