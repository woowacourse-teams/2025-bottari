<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_bottari_template"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/space_large"
    android:paddingEnd="@dimen/space_x_small"
    android:paddingVertical="@dimen/space_median"
    android:layout_marginHorizontal="@dimen/space_large"
    android:layout_marginTop="@dimen/space_2x_small"
    android:layout_marginBottom="@dimen/space_x_small"
    android:background="@drawable/bg_white_radius_12dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tv_bottari_template_title"
        style="@style/Pretendard_Medium_20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_x_small"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/btn_bottari_template_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="우테코출근보따리글자수열다섯자" />

    <TextView
        android:id="@+id/tv_bottari_template_items"
        style="@style/Pretendard_Medium_16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_small"
        android:layout_marginTop="@dimen/space_2x_small"
        android:maxLines="1"
        android:textColor="@color/gray_a6a6a6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_bottari_template_delete"
        app:layout_constraintTop_toBottomOf="@id/tv_bottari_template_title"
        tools:text="사원증, 노트북, 물통 등 13개의 물건" />

    <TextView
        android:id="@+id/tv_bottari_template_taken_count"
        style="@style/Pretendard_Medium_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_x_small"
        android:drawablePadding="@dimen/space_2x_small"
        android:maxLines="1"
        android:textColor="#FF999999"
        app:drawableStartCompat="@drawable/ic_download"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bottari_template_items"
        tools:text="100024회" />

    <ImageView
        android:id="@+id/btn_bottari_template_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/bottari_template_delete_btn_description"
        android:padding="@dimen/space_small"
        android:src="@drawable/btn_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
