<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/toolbar_alarm_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/common_close_btn_description"
            android:padding="@dimen/space_small"
            android:src="@drawable/btn_close" />

        <TextView
            android:id="@+id/tv_alarm_edit_title"
            style="@style/Pretendard_Bold_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/alarm_edit_title_text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/btn_confirm"
            style="@style/Pretendard_SemiBold_16"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="@string/common_save_btn_text"
            android:textColor="@color/black" />
    </Toolbar>

    <ScrollView
        android:id="@+id/sv_alarm_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray_f8f8f8"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_alarm_edit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_alarm_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_median"
                android:background="@drawable/bg_white_radius_12dp"
                android:elevation="2dp"
                android:padding="@dimen/space_x_small">

                <TextView
                    android:id="@+id/tv_alarm_type"
                    style="@style/Pretendard_Bold_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_x_small"
                    android:layout_marginTop="@dimen/space_x_small"
                    android:layout_marginBottom="@dimen/space_x_small"
                    android:text="@string/alarm_edit_type_title_text"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_alarm_type_non_repeat"
                    style="@style/Pretendard_Medium_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_x_small"
                    android:layout_marginTop="@dimen/space_median"
                    android:background="@drawable/bg_white_radius_12dp"
                    android:elevation="2dp"
                    android:paddingVertical="@dimen/space_median"
                    android:paddingStart="@dimen/space_median"
                    android:paddingEnd="0dp"
                    android:text="@string/alarm_edit_type_non_repeat_text"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_alarm_type" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_alarm_non_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="tv_non_repeat_alarm_date_title, tv_non_repeat_alarm_date_title, btn_calendar, tv_non_repeat_alarm_date, layout_non_repeat_alarm_time" />

                <TextView
                    android:id="@+id/tv_non_repeat_alarm_date_title"
                    style="@style/Pretendard_SemiBold_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_x_large"
                    android:layout_marginTop="@dimen/space_median"
                    android:text="@string/alarm_edit_date_text"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_alarm_type_non_repeat" />

                <TextView
                    android:id="@+id/tv_non_repeat_alarm_date"
                    style="@style/Pretendard_SemiBold_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@id/btn_calendar"
                    app:layout_constraintTop_toTopOf="@id/tv_non_repeat_alarm_date_title"
                    tools:text="2025년 8월 8일" />

                <ImageView
                    android:id="@+id/btn_calendar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="@dimen/space_median"
                    android:contentDescription="@string/alarm_date_edit_btn_description"
                    android:padding="@dimen/space_small"
                    android:src="@drawable/btn_calendar"
                    app:layout_constraintBottom_toBottomOf="@id/tv_non_repeat_alarm_date_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_non_repeat_alarm_date_title" />

                <include
                    android:id="@+id/layout_non_repeat_alarm_time"
                    layout="@layout/layout_alarm_edit_time_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_x_small"
                    app:layout_constraintTop_toBottomOf="@id/tv_non_repeat_alarm_date_title" />

                <TextView
                    android:id="@+id/tv_alarm_type_repeat"
                    style="@style/Pretendard_Medium_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_x_small"
                    android:layout_marginTop="@dimen/space_median"
                    android:background="@drawable/bg_white_radius_12dp"
                    android:elevation="2dp"
                    android:paddingVertical="@dimen/space_median"
                    android:paddingStart="@dimen/space_median"
                    android:paddingEnd="0dp"
                    android:text="@string/alarm_edit_type_repeat_text"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/tv_alarm_day_of_week"
                    app:layout_constraintTop_toBottomOf="@id/layout_non_repeat_alarm_time"
                    app:layout_constraintVertical_bias="0"
                    app:layout_goneMarginBottom="@dimen/space_median" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_alarm_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="tv_alarm_day_of_week, rv_day_of_week, layout_repeat_alarm_time" />

                <TextView
                    android:id="@+id/tv_alarm_day_of_week"
                    style="@style/Pretendard_SemiBold_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_x_large"
                    android:layout_marginTop="@dimen/space_median"
                    android:text="@string/alarm_edit_day_of_week_text"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_alarm_type_repeat" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_day_of_week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/space_small"
                    android:layout_marginStart="@dimen/space_median"
                    android:fadingEdgeLength="@dimen/space_2x_small"
                    android:requiresFadingEdge="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_alarm_day_of_week"
                    tools:listitem="@layout/item_day_of_week" />

                <include
                    android:id="@+id/layout_repeat_alarm_time"
                    layout="@layout/layout_alarm_edit_time_picker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/space_x_small"
                    app:layout_constraintTop_toBottomOf="@id/rv_day_of_week" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_alarm_location_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_median"
                android:layout_marginTop="@dimen/space_2x_small"
                android:layout_marginBottom="@dimen/space_2x_small"
                android:background="@drawable/bg_white_radius_12dp"
                android:elevation="2dp"
                android:padding="@dimen/space_median"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_alarm_location"
                    style="@style/Pretendard_Bold_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_x_small"
                    android:text="@string/alarm_edit_location_title_text"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/btn_alarm_current_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/alarm_edit_location_btn_description"
                    android:src="@drawable/btn_location"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
