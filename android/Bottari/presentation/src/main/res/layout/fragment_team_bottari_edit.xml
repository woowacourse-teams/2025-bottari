<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.edit.team.main.TeamBottariEditFragment">

    <Toolbar
        android:id="@+id/toolbar_team_edit"
        style="@style/Pretendard_Medium_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetStart="0dp"
        android:titleTextColor="@color/black">

        <ImageView
            android:id="@+id/btn_previous"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/common_previous_btn_description"
            android:padding="@dimen/space_small"
            android:src="@drawable/btn_previous" />

        <TextView
            android:id="@+id/tv_team_edit_title"
            style="@style/Pretendard_Bold_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            tools:text="팀 보따리" />

        <ImageView
            android:id="@+id/btn_option"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:contentDescription="@string/common_option_btn_description"
            android:padding="@dimen/space_small"
            android:src="@drawable/btn_more" />
    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdgeLength="8dp"
        android:requiresFadingEdge="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/view_team_personal_item_edit"
                layout="@layout/view_bottari_item_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_large"
                android:layout_marginTop="@dimen/space_median" />

            <include
                android:id="@+id/view_team_assigned_item_edit"
                layout="@layout/view_bottari_item_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_large"
                android:layout_marginTop="@dimen/space_median" />

            <include
                android:id="@+id/view_team_shared_item_edit"
                layout="@layout/view_bottari_item_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_large"
                android:layout_marginTop="@dimen/space_median" />

            <include
                android:id="@+id/view_team_alarm_edit"
                layout="@layout/view_bottari_alarm_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_large"
                android:layout_marginTop="@dimen/space_median" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_2x_large" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
