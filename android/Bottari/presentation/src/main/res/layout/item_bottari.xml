<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_bottari_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/space_large"
    android:layout_marginTop="@dimen/space_2x_small"
    android:layout_marginBottom="@dimen/space_x_small"
    android:background="@drawable/bg_white_radius_12dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tv_bottari_title"
        style="@style/Pretendard_Medium_20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_large"
        android:layout_marginTop="@dimen/space_small"
        android:layout_marginEnd="@dimen/space_small"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/btn_bottari_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="우테코출근보따리글자수열다섯자" />

    <TextView
        android:id="@+id/tv_bottari_quantity_status"
        style="@style/Pretendard_Bold_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_large"
        android:layout_marginTop="@dimen/space_x_small"
        android:layout_marginBottom="@dimen/space_median"
        android:background="@drawable/bg_black_radius_12dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bottari_title"
        tools:text="5/7" />

    <TextView
        android:id="@+id/tv_bottari_alarm_info"
        style="@style/Pretendard_Medium_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_small"
        android:layout_marginEnd="@dimen/space_small"
        android:textColor="@color/gray_a6a6a6"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottari_quantity_status"
        app:layout_constraintEnd_toStartOf="@id/btn_bottari_more"
        app:layout_constraintStart_toEndOf="@id/tv_bottari_quantity_status"
        app:layout_constraintTop_toTopOf="@id/tv_bottari_quantity_status"
        tools:text="08:00 | 매주 반복 | 화, 수, 목, 금" />

    <ImageView
        android:id="@+id/btn_bottari_more"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/bottari_item_more_button_description"
        android:padding="@dimen/space_small"
        android:src="@drawable/btn_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pb_bottari_item"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:progressDrawable="@drawable/bg_progress_bottari"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:max="100"
        tools:progress="50" />

</androidx.constraintlayout.widget.ConstraintLayout>